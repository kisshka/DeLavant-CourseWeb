@using DeLavant_CourseWeb.Models.UserBd
@model IEnumerable<Post>

@{
    ViewData["Title"] = "Список должностей";
}

<a class="with-icon-add" asp-action="Create">добавить должность</a>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdPost">Редактировать</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPost">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>