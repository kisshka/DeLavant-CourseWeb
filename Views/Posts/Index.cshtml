@using DeLavant_CourseWeb.Models.UserBd
@model IEnumerable<Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать новую должность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdPost">Редактировать</a> |
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPost">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
